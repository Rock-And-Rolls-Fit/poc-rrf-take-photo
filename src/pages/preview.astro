---
import Layout from "@/layout/Layout.astro";
import { Button } from "@/components/ui/button";
---

<Layout title="Preview">
  <div class="flex flex-col justify-center items-center mx-auto p-4 space-y-4">
    <img id="photo" src="" alt="Preview" class="rounded-md max-w-full h-auto" />
    <Button variant="default" size="lg" id="capture">Enviar foto</Button>
    <div
      id="status"
      class="text-center text-white bg-black/15 rounded-md p-2 w-full"
    >
    </div>
  </div>
</Layout>

<style>
  #status {
    margin-top: 20px;
    font-weight: bold;
    color: #2c3e50;
  }
</style>

<script>
  const btnCapture = document.getElementById("capture") as HTMLButtonElement;
  const photo = document.getElementById("photo") as HTMLImageElement;
  const statusText = document.getElementById("status") as HTMLDivElement;

  // Cargar la foto desde sessionStorage
  const photoBase64 = sessionStorage.getItem("photoBase64");

  if (photoBase64) {
    photo.src = photoBase64;
  } else {
    // Si no hay foto, volver al inicio
    window.location.href = "/";
  }

  btnCapture.addEventListener("click", async () => {
    const photoB64 = photo.src;

    btnCapture.disabled = true;
    btnCapture.innerHTML = "Enviando foto...";

    try {
      const response = await fetch("/api/upload-photo", {
        method: "POST",
        body: JSON.stringify({ photo: photoB64 }),
        headers: {
          "Content-Type": "application/json",
        },
      });

      const data = await response.json();

      if (data.status !== "ok") {
        console.error("Error uploading photo:", data.error);
        statusText.style.color = "red";
        statusText.innerText = data.message;
        btnCapture.disabled = false;
        btnCapture.innerHTML = "Enviar foto";
        return;
      }

      console.log("Photo uploaded:", data);
      statusText.style.color = "green";
      statusText.innerText = "Foto enviada con éxito";
      
      // Limpiar el sessionStorage después de enviar
      sessionStorage.removeItem("photoBase64");
      
      setTimeout(() => {
        window.location.href = "/";
      }, 2000);

    } catch (error) {
      console.error("Error:", error);
      statusText.style.color = "red";
      statusText.innerText = "Error al enviar la foto";
      btnCapture.disabled = false;
      btnCapture.innerHTML = "Enviar foto";
    }
  });
</script>
